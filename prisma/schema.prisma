generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ExperienceBlock {
  id          Int                @id @default(autoincrement())
  companyName String
  iconPath    String
  alt         String
  location    String
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  periods     ExperiencePeriod[]
}

model ExperiencePeriod {
  id                Int             @id @default(autoincrement())
  position          String
  startDate         DateTime
  endDate           DateTime?
  experienceBlockId Int
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  experienceBlock   ExperienceBlock @relation(fields: [experienceBlockId], references: [id])
}

model WorkItem {
  id           Int            @id @default(autoincrement())
  title        String
  description  String
  menuId       Int
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  iconPath     String
  menu         Menu           @relation(fields: [menuId], references: [id])
  links        WorkItemLink[]
  technologies Technology[]   @relation("WorkItemTechnologies")
}

model WorkItemLink {
  id         Int      @id @default(autoincrement())
  url        String
  label      String?
  workItemId Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  iconPath   String?
  workItem   WorkItem @relation(fields: [workItemId], references: [id])
}

model SocialLink {
  id        Int      @id @default(autoincrement())
  url       String
  alt       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  iconPath  String
}

model Technology {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  iconPath  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  workItems WorkItem[] @relation("WorkItemTechnologies")
}

model Menu {
  id        Int        @id @default(autoincrement())
  title     String
  link      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  content   WorkItem[]
}
